!!! 5
%html
  %head
    %meta{charset:"utf-8"}
    %link{rel:"stylesheet", href:"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity:"sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin:"anonymous"}
    :sass
      canvas
        border: solid 1px #333
        cursor: crosshair
        margin: auto
        position: center
  %body
    .container-fluid
      #app
        .panel.panel-default
          .controls.btn-toolbar.panel-heading{role:"toolbar"}
            %h3 
              Crepinator
              %small Draw. Print. Eat. Repeat
            .btn-group{role:"group"}
              %button.btn.btn-default.tool-rect{type:"button"}
                %i.glyphicon.glyphicon-stop
                Rectangle
              %button.btn.btn-default.tool-disk{type:"button"}
                %i.glyphicon.glyphicon-ban-circle
                Rond
              %button.btn.btn-default.dropdown-toggle{type:"button", 'data-toggle' => "dropdown"}
                %i.glyphicon.glyphicon-edit
                Dessiner
                %span.caret
              %ul.dropdown-menu
                - [25, 50, 100].each do |x|
                  %li{class:"tool-pen#{x}"}
                    %a{href:"#"} Crayon de #{x}px

            .btn-group{role:"group"}
              %button.btn.btn-default.tool-clear{type:"button"}
                %i.glyphicon.glyphicon-trash
                Effacer
              %button.btn.btn-default.tool-undo{type:"button"}
                %i.glyphicon.glyphicon-menu-left
                Annuler

          .panel-body
            %canvas{width:800, height:600}
          .panel-footer
            %h4 SVG
            %pre.svg
    %script{src:"app.js", type:"text/javascript"}            
    %script{src:"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity:"sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin:"anonymous"}
    :javascript
      var yoloSWAG = new PancakeDesigner($('#app'))
