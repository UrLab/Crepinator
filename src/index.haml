!!! 5
%html
  %head
    %meta{charset:"utf-8"}
    %link{rel:"stylesheet", href:"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity:"sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin:"anonymous"}
    %link{rel:"stylesheet", href:"https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"}
    :sass
      canvas
        border: solid 1px #333
        cursor: crosshair
        margin: auto
        position: center
        user-select: none
  %body
    .container-fluid
      #app
        .panel.panel-default
          .controls.btn-toolbar.panel-heading{role:"toolbar"}
            %h3 
              Crepinator
              %small Draw. Print. Eat. Repeat
            .btn-group{role:"group"}
              %button.btn.btn-primary.dropdown-toggle{title: "Dessiner", type:"button", 'data-toggle' => "dropdown"}
                %i.fa.fa-pencil
                %span.caret
              %ul.dropdown-menu
                -1.upto 5 do |i|
                  %li{class:"tool-pen#{14*i}"}
                    %a{href:"#"}
                      %i.fa.fa-circle{class:(i>1) ? "fa-#{i}x" : ""}
                      Crayon
                %li.divider{role:"separator"}
                -1.upto 5 do |i|
                  %li{class:"tool-pen#{14*i}-o"}
                    %a{href:"#"}
                      %i.fa.fa-circle-o{class:(i>1) ? "fa-#{i}x" : ""}
                      Gomme

            .btn-group{role:"group"}
              %button.btn.btn-primary.dropdown-toggle{title: "Formes", type:"button", 'data-toggle' => "dropdown"}
                %i.fa.fa-cube
                %span.caret
              %ul.dropdown-menu
                %li.tool-disk
                  %a{href:"#"}
                    %i.fa.fa-circle
                    Rond
                %li.tool-rect
                  %a{href:"#"}
                    %i.fa.fa-square
                    Rectangle
                %li.divider{role:"separator"}
                %li.tool-disk-o
                  %a{href:"#"}
                    %i.fa.fa-circle-o
                    Gomme rond
                %li.tool-rect-o
                  %a{href:"#"}
                    %i.fa.fa-square-o
                    Gomme rectangle

            .btn-group{role:"group"}
              %button.btn.btn-danger.tool-clear{title: "Effacer", type:"button"}
                %i.fa.fa-trash
                Effacer
              %button.btn.btn-warning.tool-undo{title: "Annuler", type:"button"}
                %i.fa.fa-undo
                Annuler

          .panel-body
            .col-xs-8
              %canvas{width:800, height:600}
            .col-xs-4
              .queue
          .panel-footer
            Made with
            %i.fa.fa-heart
            at
            %a{href:"https://urlab.be", target:"_blank"} UrLab
    %script{src:"app.js", type:"text/javascript"}            
    %script{src:"https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity:"sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin:"anonymous"}
    :javascript
      var yoloSWAG = new PancakeDesigner($('#app'))
